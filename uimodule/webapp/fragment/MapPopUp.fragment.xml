<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Popover title="Location Info" initialFocus="id_nombrePuntoGmap" contentWidth="26rem" placement="Top" class="sapUiSizeCompact sapUiContentPadding">
        <!--  <Text text="Location info" /> -->
        <!--  <Label text="Place : " ></Label>-->
        <Title id="id_tipeLabel" text="" />
        <VBox>
        <Label text="Nombre:" class="sapUiSmallMarginTop"/>
        <Input placeholder="Nombre..." id="id_nombrePuntoGmap" width="50%" class="sapUiSmallMarginBottom"/>
        <!--  <Label text="City : " ></Label>-->
        <Label text="Detalle:"/>
        <Input placeholder="Detalle..." id="id_detallePuntoGmap" width="100%"/>
        </VBox>
        <footer>
            <Toolbar >
                <ToolbarSpacer/>
                <Button  id="id_BtnAddOrigin" text="Marcar Origen" press="fnSaveOrigin"/>
                <Button  id="id_BtnAddDestination" text="Marcar Destino" press="fnSaveDestination"/>
                <Button  id="id_BtnAddWaypoint" text="Marcar Parada" press="fnSaveWaypoint"/>
                <Button  id="id_BtnCancel" text="Cancelar" press="fnCancel"/>
            </Toolbar>
        </footer>
    </Popover>
</core:FragmentDefinition>