<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <!-- Si es popOver va a ser igual que el que salta en los markers -->
    <Popover title="Hoja de ruta" contentWidth="15rem" placement="Top" class="sapUiSizeCompact sapUiContentPadding">

        <Input placeholder="Parada:" id="id_Waypoint"/>
        <Input placeholder="Detalle:" id="id_WaypointDetail"/>
        <footer>
            <Toolbar class="cl_PopFoot">
                <ToolbarSpacer/>
                <Button class="cl_PopFoot" id="id_BtnSave" text="Save" press="fnSaveWaypoint"/>
                <Button class="cl_PopFoot" id="id_BtnCancel" text="Cancel" press="fnCancel"/>
            </Toolbar>
        </footer>

    </Popover> 
</core:FragmentDefinition>